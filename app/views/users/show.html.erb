<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
<% end %>

<div class="container">
      <div class="row">
      	 <div class="col-lg-3" >
		   <%= render 'users/list', user: @user, book: @book %>
	     </div>

      	 <div class="col-lg-9" >
			<h2>Books</h2>
						<table class="table table-striped">
						<thead>
							<tr>
								<th></th>
								<th>Title</th>
								<th>Opinion</th>
							</tr>
						</thead>
						<tbody>
							<tr>
					          <% @books.each do |book| %>
					           <td>	<%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "img/no_image.jpg" %></td>
					           <td> <span><%= link_to book.title, book_path(book), class: "show_#{book.id}" %></span></td>
					           <td> <span><%= book.body %></span></td>
							</tr>
							<% end %>
						</tbody>
					    </table>
	     </div>
	  </div>
</div>